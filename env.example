# --- Owner Lock (self-lockdown) ---
# Public key JWK for ES256 (P-256). Keep the private key offline.
OWNER_PUBLIC_KEY=
# Require owner activation token for access
OWNER_LOCK_REQUIRED=true
# Force revoke all tokens by bumping version
REVOCATION_VERSION=1
# Cookie name that carries the activation token
OWNER_COOKIE_NAME=__ownlock
# Max clock skew in ms (default 300000 = 5 minutes)
OWNER_MAX_SKEW_MS=300000
# Unique ID per on-prem instance
INSTANCE_ID=
# Private module name that implements verification (kept outside this repo)
OWNER_LOCK_MODULE=@nalendramuhammad/owner-lock

